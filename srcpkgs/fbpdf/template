post_extract() {
	sed -i 's/lopenjpeg/lopenjp2 -lharfbuzz/g' Makefile
}

do_install() {
	vbin fbpdf
	vbin fbdjvu
	vdoc README  # no manpage
	vlicense LICENSE
}

post_extract() {
	sed -i 's/-Werror/-Wno-error/g' setup.py  # ugh
}

post_install() {
	sed -i "s:${DESTDIR/\/\//\/}::" ${DESTDIR}/etc/xpra/conf.d/55_server_x11.conf
	rm -rf ${DESTDIR}/etc/init.d
}

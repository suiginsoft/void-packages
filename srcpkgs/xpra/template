hostmakedepends="python pkg-config python-Cython"
makedepends="ffmpeg-devel libXcomposite-devel libXdamage-devel libXrandr-devel
 libXtst-devel libvpx-devel libwebp-devel libxkbfile-devel pygtk-devel

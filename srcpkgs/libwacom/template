# Template file for 'libwacom'
pkgname=libwacom
version=0.22
revision=1
build_style=gnu-configure
hostmakedepends="pkg-config"
makedepends="libglib-devel libgudev-devel"
short_desc="Library to identify wacom tablets"
maintainer="Juan RP <xtraeme@voidlinux.eu>"
license="MIT"
homepage="http://linuxwacom.sourceforge.net/wiki/index.php/Main_Page"
distfiles="${SOURCEFORGE_SITE}/linuxwacom/$pkgname-$version.tar.bz2"
checksum=97c19c216cbf4a2c54a5fc4f80d5a363bfa732500f0831a345bbc8ab385720c0

post_install() {
	vlicense COPYING
}

libwacom-devel_package() {
	depends="${makedepends} ${sourcepkg}>=${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/pkgconfig
		vmove usr/lib/*.a
		vmove usr/lib/*.so
	}
}

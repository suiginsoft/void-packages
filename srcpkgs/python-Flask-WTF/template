}

python3.4-Flask-WTF_package() {
	noarch=yes
	depends="python3.4-Flask python3.4-WTForms"
	pycompile_version="3.4"
	pycompile_module="flask_wtf"
	short_desc="${short_desc/Python2/Python3.4}"
	pkg_install() {
		vmove usr/lib/python3.4
		vlicense LICENSE
	}
}
